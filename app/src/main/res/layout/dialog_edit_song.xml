<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa bài hát"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Song Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edt_edit_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên bài hát"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="12dp" />

    <!-- Artist -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nghệ sĩ"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinner_edit_song_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <ImageView
            android:id="@+id/iv_artist_action_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Hành động nghệ sĩ"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Album -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/edt_edit_song_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên album"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="12dp" />

    <!-- Genre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thể loại"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinner_edit_song_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <ImageView
            android:id="@+id/iv_genre_action_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Hành động thể loại"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_cancel_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:backgroundTint="#B0BEC5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_save_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>